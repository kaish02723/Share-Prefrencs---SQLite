<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".update_user">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/uuu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#43B9C8">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationExitHomePageListViewUpdateData"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/back_arrow_animation" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/animationExitHomePage"
            android:text="Update Data"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_bg_color_radius"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_open_botton_sheet_update"
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/user_imaes2"
                app:civ_border_color="#3A000000"
                app:civ_border_width="1dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton2_open_botton_sheet_update"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="#15C71B"
                app:shapeAppearanceOverlay="@style/radius"
                app:srcCompat="@drawable/photo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please New  \nUpdate Data?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30sp"
                app:srcCompat="@drawable/user" />

            <EditText
                android:id="@+id/editTextUpdateName"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:textColor="#009688"
                android:layout_toRightOf="@id/imageView34"
                android:layout_marginTop="30dp"
                android:background="@drawable/input_bg_customize"
                android:ems="10"
                android:hint="Enter Your Name"
                android:inputType="text"
                android:paddingLeft="10dp" />


            <ImageView
                android:id="@+id/imageView44"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/imageView34"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/email" />

            <EditText
                android:id="@+id/editTextUpdateEmail"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_below="@id/editTextUpdateName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/imageView44"
                android:background="@drawable/input_bg_customize"
                android:ems="10"
                android:hint="Enter Your Email"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress" />

        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateClickButtonData"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/login_button_radius"
            android:text="Update Data" />


    </LinearLayout>


</RelativeLayout>
